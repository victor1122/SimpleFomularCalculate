<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="true"
    android:screenOrientation = "portrait"
    android:configChanges="orientation|keyboardHidden|screenSize"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="214dp"
        android:layout_height="45dp"
        android:id="@+id/txtNumC"
        android:inputType="number"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNumB"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:layout_width="315dp"
        android:layout_height="107dp"
        android:text="Place to show result"
        android:id="@+id/txtView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnWelcome"
        app:layout_constraintVertical_bias="0.32999998"
        android:scrollbars="vertical"
        android:textAlignment="textStart"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"/>

    <Button
        android:layout_width="205dp"
        android:layout_height="52dp"
        android:text="Calculate"
        android:id="@+id/btnWelcome"
        android:elevation="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNumC"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="Num C"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_width="50dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="Num B"
        android:id="@+id/textView2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="Num A"
        android:id="@+id/textView3"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtNumB"
        android:inputType="number"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNumA"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtNumA"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:text="Calculate formular"
        android:layout_width="305dp"
        android:layout_height="44dp"
        android:id="@+id/textView4"
        android:background="@android:color/white"
        tools:fontFamily="sans-serif-smallcaps"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:scrollHorizontally="false"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:textStyle="normal|bold" />
</android.support.constraint.ConstraintLayout>
